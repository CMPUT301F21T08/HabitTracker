<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/Following_Content_User_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_alignBottom="@id/Following_Content_User_textView"
        android:layout_alignTop="@id/Following_Content_User_textView"
        app:srcCompat="@drawable/empty_profile" />


    <TextView
        android:id="@+id/Following_Content_User_textView"
        android:layout_width="329dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_toRightOf="@id/Following_Content_User_imageView"
        android:text="Users"
        android:textSize="26sp"/>



</RelativeLayout>


