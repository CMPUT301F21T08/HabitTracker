<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/allHabitsContent_habitContent_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="Habit content"
        android:textSize="26sp"
        android:textStyle="bold" />

    <CheckBox
        android:id="@+id/disclose_checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Public"
        android:layout_alignParentRight="true"
        />

    <ProgressBar
        android:id="@+id/progression_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/allHabitsContent_habitContent_textView"
        android:max="100"
        />


</RelativeLayout>