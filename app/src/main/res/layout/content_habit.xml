<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/allHabitsContent_habitContent_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@id/allHabits_delete_button"
        android:layout_alignTop="@id/allHabits_delete_button"
        android:layout_alignBottom="@id/allHabits_delete_button"
        android:text="Habit content"
        android:textSize="26sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/allHabits_delete_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginStart="198dp"
        android:layout_marginRight="10dp"
        app:srcCompat="@android:drawable/ic_menu_close_clear_cancel" />

    <ProgressBar
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/allHabits_delete_button"
        android:layout_marginTop="16dp"
        android:indeterminate="false"
        android:max="100"
        android:progress="25" />


</RelativeLayout>