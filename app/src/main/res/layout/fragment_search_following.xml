<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <ImageView
        android:id="@+id/search_notification_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/Search_EditText"
        app:layout_constraintRight_toLeftOf="@+id/Search_EditText"
        app:srcCompat="@drawable/ic_notification" />



    <EditText
        android:id="@+id/Search_EditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        app:layout_constraintTop_toTopOf="parent"
        android:inputType="text"
        app:layout_constraintLeft_toRightOf="@+id/search_notification_image"
        android:hint=" Search" />



</androidx.constraintlayout.widget.ConstraintLayout>